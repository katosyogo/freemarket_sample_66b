.content
  .third__stage__header
    .logo-box
      .logo-box__logo
        =link_to root_path do
          = image_tag "fmarket_logo_red.svg", size: "185x49", alt: "フリマのアイコン"
      .logo-box__logo2
        .logo-box__logo2__text
          .logo-box__logo2__text__text1
            会員情報
          .logo-box__logo2__text__text2
            電話番号承認
          .logo-box__logo2__text__text3
            お届け先住所入力
          .logo-box__logo2__text__text4
            支払い方法
          .logo-box__logo2__text__text5
            完了
        .logo-box__logo2__point
          .logo-box__logo2__point__point1
          .logo-box__logo2__point__point2
          .logo-box__logo2__point__point3
          .logo-box__logo2__point__point4
          .logo-box__logo2__point__point5
          .logo-box__logo2__point__bar1
          .logo-box__logo2__point__bar2
          .logo-box__logo2__point__bar3
          .logo-box__logo2__point__bar4
  .center
    = form_for @user, url: {controller: 'signup', action: 'create'} do |f|
      .center__content
        .top
          %h2住所入力
        .main
          .main__text
            .main__text__top
              %labelお名前
              %span必須
              = f.text_field :family_name,placeholder: "例）山田",class: "main__text__top__box"
              = f.text_field :first_name,placeholder: "例）綾",class: "main__text__top__bottom"
            .main__text__top
              %labelお名前カナ
              %span必須
              = f.text_field :j_family_name,placeholder: "例）ヤマダ",class: "main__text__top__box"
              = f.text_field :j_first_name,placeholder: "例）アヤ",class: "main__text__top__bottom"
            = f.fields_for :address do |a|
              .main__text__top
                %label郵便番号
                %span必須
                = a.text_field :postal_code,placeholder: "例）123-4567",class: "main__text__top__bottom"
              .main__text__top
                %label都道府県
                %span必須
                = a.text_field :prefectuer,placeholder: "例）北海道",class: "main__text__top__bottom"
              .main__text__top
                %label市区町村
                %span必須
                = a.text_field :city_ward,placeholder: "例）横浜市緑区",class: "main__text__top__bottom"
              .main__text__top
                %label番地
                %span必須
                = a.text_field :address,placeholder: "例）青山1-1-1",class: "main__text__top__bottom"
              .main__text__top
                %label建物名
                %span.place任意
                = a.text_field :building,placeholder: "例）柳ビル103",class: "main__text__top__bottom"
              .main__text__top
                %label電話
                %span.place任意
                = a.phone_field :tel,placeholder: "例）1234567890",class: "main__text__top__bottom"
            = f.submit "次へ進む",class:"main__text__btn"
  .footer
    .footer_center
      プライバシーポリシー Fmarket利用規約 特定商取引
      .gray
        =link_to root_path do
          = image_tag "logo_gray.svg", size: "80x65", alt: "フリマのアイコン"
      .inc © Fmarket, Inc.