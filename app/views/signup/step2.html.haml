.content
  .second__stage__header
    .logo-box
      .logo-box__logo
        =link_to root_path do
          = image_tag "fmarket_logo_red.svg", size: "185x49", alt: "フリマのアイコン"
      .logo-box__logo2
        .logo-box__logo2__text
          .logo-box__logo2__text__text1
            会員情報
          .logo-box__logo2__text__text2
            電話番号承認
          .logo-box__logo2__text__text3
            お届け先住所入力
          .logo-box__logo2__text__text4
            支払い方法
          .logo-box__logo2__text__text5
            完了
        .logo-box__logo2__point
          .logo-box__logo2__point__point1
          .logo-box__logo2__point__point2
          .logo-box__logo2__point__point3
          .logo-box__logo2__point__point4
          .logo-box__logo2__point__point5
          .logo-box__logo2__point__bar1
          .logo-box__logo2__point__bar2
          .logo-box__logo2__point__bar3
          .logo-box__logo2__point__bar4
  .center
    = form_for @user, url: step3_signup_index_path, method: :get, html: {class: "first-main__box__main__form"} do |f|
      .center__content
        .top
          %h2電話番号の確認
        .main
          .main__text
            .main__text__top
              %h2携帯電話の番号
              = f.phone_field :phonennumber,placeholder: "携帯電話の番号を入力",class: "main__text__top__box"
            %p本人確認のため、携帯電話のSMS(ショートメッセージービス)を利用して認証を行います。
            = f.submit "SMSを送信する",class:"main__text__btn"
            %p※電話番号は本人確認や不正利用防止のために利用します。他のユーザーに公開されることはありません。
            .main__text__bottom
              = link_to root_path, class: "info" do
                電話番号の確認が必要な理由
                = icon("fas", "chevron-right",class: "arrow")
                %span<>  
  .footer
    .footer_center
      プライバシーポリシー メルカリ利用規約 特定商取引
      .gray
        =link_to root_path do
          = image_tag "logo_gray.svg", size: "80x65", alt: "フリマのアイコン"
